{
  "name": "fhevm-sdk",
  "version": "1.0.0",
  "description": "Universal FHEVM SDK - Framework-agnostic FHE encryption/decryption utilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.js",
      "require": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "encryption",
    "homomorphic",
    "zama",
    "privacy",
    "blockchain",
    "ethereum"
  ],
  "author": "FHEVM SDK Team",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "ethers": "^6.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "dependencies": {
    "fhevmjs": "^0.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "ethers": "^6.4.0",
    "react": "^18.2.0"
  }
}
